# =============================================================================
# RustLogger Docker Compose Environment Configuration Template
# =============================================================================
# Copy this file to .env and update the values below

# =============================================================================
# ELASTICSEARCH CLUSTER CONFIGURATION
# =============================================================================

# Passwords (at least 6 characters)
ELASTIC_PASSWORD=123456
KIBANA_PASSWORD=123456

# Elasticsearch cluster settings
STACK_VERSION=8.19.0
CLUSTER_NAME=docker-cluster
LICENSE=basic

# Port configuration
ES_PORT=9200
KIBANA_PORT=5601

# Memory configuration (in bytes) - adjust based on available system memory
MEM_LIMIT=1073741824

# Project namespace
COMPOSE_PROJECT_NAME=rustlogger

# Kibana encryption key for saved objects (generate a random 32-character string)
KIBANA_ENCRYPTION_KEY=generate_32_character_random_string

# =============================================================================
# API SERVICES CONFIGURATION
# =============================================================================

# Elasticsearch connection for API services
ELASTIC_USERNAME=elastic
ELASTIC_URL=http://haproxy:9200

# Elasticsearch index configuration (now handled dynamically by message types)
ELASTIC_INDEX_REPLICAS=1
ELASTIC_INDEX_SHARDS=1

# Deployment environment
DEPLOYMENT=PROD

# =============================================================================
# LOGGING SERVICES CONFIGURATION
# =============================================================================

# New configuration for multi-type logging
LOGS_DIRECTORY="/etc/logs/"
CONFIG_PATH="/etc/config/message_types.toml"

# Load balancer endpoint
ENDPOINT="http://log-forwarding-lb:80/send_log"

# Log sending configuration
REPETITIONS=1
ENDLESS=true
PROCESS_AMOUNT=1

# Loadbalancer security settings
SECRET_API_KEY=1234567
