# Container Log Collector Configuration

# Server Configuration
BIND_ADDRESS=0.0.0.0
SYSLOG_PORT=514

# Log Forwarding API Configuration
API_URL=http://log-forwarding-lb:80

# SQLite Buffer Configuration
BUFFER_DB_PATH=/var/lib/container-collector/buffer.db
MAX_RETRIES=5
RETRY_DELAY_SECS=30
CLEANUP_FAILED_AFTER_HOURS=24

# Logging Configuration
LOG_LEVEL=info

# Batch Processing Configuration
BATCH_SIZE=100
BATCH_TIMEOUT_MS=5000

# Deployment
DEPLOYMENT=PROD