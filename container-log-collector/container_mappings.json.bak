{
  "mappings": [
    {
      "container_pattern": "log-forwarding-api.*",
      "index_name": "api-logs",
      "message_type": "api"
    },
    {
      "container_pattern": "haproxy",
      "index_name": "haproxy-logs", 
      "message_type": "haproxy"
    },
    {
      "container_pattern": "log-forwarding-lb",
      "index_name": "nginx-logs",
      "message_type": "nginx"
    },
    {
      "container_pattern": "log-sender.*",
      "index_name": "log-sender-logs",
      "message_type": "application"
    },
    {
      "container_pattern": "es0[1-4]",
      "index_name": "elasticsearch-logs",
      "message_type": "elasticsearch"
    },
    {
      "container_pattern": "kibana",
      "index_name": "kibana-logs",
      "message_type": "kibana"
    },
    {
      "container_pattern": "metricbeat",
      "index_name": "metricbeat-logs",
      "message_type": "metricbeat"
    },
    {
      "container_pattern": "log-gen",
      "index_name": "log-generator-logs",
      "message_type": "application"
    }
  ]
}